<div class="container">
  <h1><%= t('.access_point') %></h1>
    <div class="access-point">
    <div class="ngo">
        <img src="<%= @service.ngo.logo %>" alt="logo" height="42"/><h2><%= @service.ngo.name %></h2>
    </div>
    <h3><%= @service.name %></h3>
    <p><%= @service.address %></p>
    <p><%= @service.phone %></p>
    <p><%= @service.mail %></p>
    <p><%= @service.link %></p>
    <p><%= @service.comment %></p>

    <%= link_to 'Edit', edit_service_path(@service) %> |
    <%= link_to 'Back', services_path %>
  </div>
  <h1><%= t('.access_point_activities') %></h1>
  <% if @service.activity_slots.any? %>
    <% @service.activity_slots.each do |activity| %>
      <div class="activity">
      <%= t('.activity_title') %>: <%= activity.title %> <br>
      <%= t('.activity_hours') %>: <%= activity.opening_hours %> <br>
      <%= t('.activity_price') %>: <%= activity.price %> <br>
      <%= link_to 'Edit', edit_service_path(activity) %> |
      <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, activity, method: :delete, data: { confirm: 'Are you sure?' } %> |
      <%= link_to 'Back', services_path %>
      </div>
    <% end %>
  <% else %>
    <%= t('.no_activity') %>
    <%= link_to t('.new_activity'), new_service_activity_slot_path(@service), class: "btn btn-primary" %>
  <% end %>
</div>
