<div class="container">
  <h1><%= t('.access_point') %></h1>
    <div class="access-point">
    <div class="ngo">
        <img src="<%= @service.ngo.logo %>" alt="logo" height="42"/><h2><%= @service.ngo.name %></h2>
    </div>
    <h3><%= @service.name %></h3>
    <p><%= @service.address %></p>
    <p><%= @service.phone %></p>
    <p><%= @service.mail %></p>
    <p><%= @service.link %></p>
    <p><%= @service.comment %></p>
    <% if policy(@service).edit? %>
      <%= link_to 'Edit', edit_service_path(@service) %> |
    <% end %>
    <%= link_to 'Back', services_path %>
  </div>
  <h1><%= t('.access_point_activities') %></h1>
  <% if @service.activity_slots.any? %>
    <% @service.activity_slots.each do |activity_slot| %>
      <%= render 'activity_slots/show', activity_slot: activity_slot %>
    <% end %>
  <% else %>
    <%= t('.no_activity') %>
  <% end %>
  <% if policy(@service).edit? %>
    <h4><%= t('.new_activity') %></h4>
    <%= render 'activity_slots/form', service: @service, activity_slot: @activity_slot %>
    <br>
  <% end %>
  <%= link_to t('.back_to_access_points'), services_path, class: "btn btn-primary" %>
</div>
