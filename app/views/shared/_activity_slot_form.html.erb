<% service = @service if @service %>
<% activity_slot = @activity_slot if @activity_slot %>

<%= simple_form_for [service, activity_slot], remote: true do |f| %>
  <%= f.input :title, placeholder: "Title"%>
  <%= f.input :opening_hours, placeholder: "Opening Hours"%>
  <%= f.input :activities, placeholder: "Activities"%>
  <%= f.input :price, placeholder: "Price"%>
  <%= f.submit class: "btn btn-warning" %>
<% end %>
